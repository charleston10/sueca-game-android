<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.charleston.sueca">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_drink"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".features.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".features.questions.QuestionActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".features.onboarding.OnboardingActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>